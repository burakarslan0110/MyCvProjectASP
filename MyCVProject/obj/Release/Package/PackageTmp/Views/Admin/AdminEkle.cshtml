@model MyCVProject.Models.Entity.Admin
@{
    ViewBag.Title = "AdminEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h4>Yeni Admin Kullanıcı Ekle</h4>
<br />
<form method="post">
    @Html.Label("Kullanıcı Adı:")
    @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control" })
    <br />
    @Html.Label("Parola:")
    @Html.TextBoxFor(x => x.Parola, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Yeni Admin Kullanıcı Ekle</button>
</form>

