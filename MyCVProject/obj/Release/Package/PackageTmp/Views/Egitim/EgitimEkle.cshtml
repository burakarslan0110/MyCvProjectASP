@model MyCVProject.Models.Entity.Egitimlerim
@{
    ViewBag.Title = "EgitimEkle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h4>Yeni Eğitim Ekle</h4>
<br />
<form method="post">
    @Html.Label("Başlık:")
    @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Baslik, "", new { @style = "color:red" })
    <br />
    @Html.Label("Alt Başlık 1:")
    @Html.TextBoxFor(x => x.AltBaslik1, new { @class = "form-control" })
    <br />
    @Html.Label("Alt Başlık 2:")
    @Html.TextBoxFor(x => x.AltBaslik2, new { @class = "form-control" })
    <br />
    @Html.Label("Tarih Aralığı:")
    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
    <br />
    @Html.Label("Genel Not Ortalaması (GNO):")
    @Html.TextBoxFor(x => x.Ortalama, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Ortalama, "", new { @style = "color:red" })
    <br />
    <button class="btn btn-info">Yeni Eğitim Ekle</button>
</form>

